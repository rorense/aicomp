// Everytime you generate a new model
// 'npx prisma generate' Add model to local prisma
// 'npx prisma db push' push the model to planet scale

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id String @id @default(uuid())
  name String
}